{
  "name": "app",
  "version": "0.0.1",
  "description": "ovine herd platform.",
  "license": "MIT",
  "scripts": {
    "gen:static": "node-sass -v && yarn scss && yarn dll && cp -rf ./.ovine ../platform/",
    "dev": "ovine dev --mock --port 7062",
    "start": "ovine dev --mock --host 0.0.0.0 --port 7062 --no-hot",
    "build:staging": "yarn eslint && ovine build --env=staging",
    "test:build": "yarn cp:lib && ovine build --bundle-analyzer",
    "open:dist": "http-server ./dist -i -g -c5 -o / -p 7051 -P http://0.0.0.0:7051?",
    "ovine": "ovine",
    "scss": "ovine scss",
    "dll": "ovine dll --embed-assets",
    "clean": "rimraf ./node_modules/.cache",
    "pretty": "prettier --loglevel warn --write --config .prettierrc \"**/*.{md,yml,json,yaml,css}\"",
    "eslint": "eslint --cache \"**/*.{js,jsx,ts,tsx}\" --fix",
    "cp:lib:cli": "rimraf ./node_modules/@ovine/cli/lib && cp -rf ../../../ovine/packages/cli/lib/. ./node_modules/@ovine/cli/lib",
    "cp:lib:core": "rimraf ./node_modules/@ovine/core/lib && cp -rf ../../../ovine/packages/core/lib/. ./node_modules/@ovine/core/lib",
    "cp:lib:editor": "rimraf ./node_modules/@ovine/editor/lib && cp -rf ../../../ovine/packages/editor/lib/. ./node_modules/@ovine/editor/lib",
    "cp:lib": "yarn cp:lib:cli && yarn cp:lib:core",
    "rm:core": "rimraf ./node_modules/@ovine/core",
    "rm:lib": "yarn rm:core "
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.8.6",
    "@ovine/cli": "^0.1.1",
    "@ovine/core": "^0.1.1",
    "@ovine/editor": "^0.1.1",
    "immer": "^5.3.2",
    "lodash": "^4.17.15",
    "react": "^16.8.6",
    "react-content-loader": "^5.1.4",
    "react-router-dom": "^5.1.2",
    "styled-components": "^5.0.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.8.6",
    "@types/react-router-dom": "^5.1.0",
    "@types/styled-components": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": "yarn pretty",
    "*.{js,jsx,ts,tsx}": "yarn eslint"
  },
  "engines": {
    "node": ">=10.9.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
